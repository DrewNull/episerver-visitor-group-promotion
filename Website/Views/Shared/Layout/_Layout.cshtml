@using EPiServer.Framework.Web.Mvc.Html
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>South Loop Music Lessons</title>
    @Html.RequiredClientResources("Header")
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Crimson+Text|Oswald">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/Static/css/site.css" />
</head>
<body class="font-crimson-text font-size-18">
    <div>
        <header class="site-header">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <p class="font-oswald font-size-36">
                            South Loop Music Lessons
                        </p>
                        <p>
                            Ficticious Music Lessons for All Ages
                        </p>
                        <hr />
                    </div>
                </div>
            </div>
        </header>
        <nav class="font-oswald font-size-24">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <ul class="nav nav-pills">
                            <li><a href="/"><span class="fa fa-home"></span></a></li>
                            <li><a href="/music-lessons/violin">Violin Lessons</a></li>
                            <li><a href="/music-lessons/piano">Piano Lessons</a></li>
                            <li><a href="/music-lessons/music-theory-classes">Music Theory</a></li>
                            <li><a href="/policies">Policies</a></li>
                            <li><a href="/about">About</a></li>
                            <li><a href="/contact">Contact</a></li>
                            <li class="float-right"><a href="/cart"><span class="fa fa-shopping-cart"></span></a></li>
                            <li class="float-right"><a href="/">Sign In</a></li>
                        </ul>
                        <hr />
                    </div>
                </div>
            </div>
        </nav>
        @RenderBody()
        <footer class="site-footer">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <hr />
                        <p>
                            &copy; @DateTime.Now.Year Some Fictious Company, LLC
                        </p>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    @Html.RequiredClientResources("Footer")
    @Html.Action("GetStatus", "Debugger")
</body>
</html>
